{
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "project",
    "public",
    "gatsby",
    "static",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "lib": ["dom", "es2017"],
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@sections/*": ["./src/sections/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils": ["./src/utils/index"],
      "@utils/*": ["./src/utils/*"],
      "@content/*": ["./content/*"],
      "@typings": ["./src/types/index"],
      "@typings/*": ["./src/types/*"],
      "@queries": ["./src/queries/index"],
      "@queries/*": ["./src/queries/*"]
    }
  }
}
